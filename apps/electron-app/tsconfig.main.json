{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmitOnError": true,
    "noEmit": false,
    "outDir": "dist",
    "target": "ES2020",
    "module": "commonjs",            // ← emit import/exports for Node ESM
    "moduleResolution": "node",  // ← resolve ESM imports correctly
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": ["main.ts", "preload.ts"]
}
