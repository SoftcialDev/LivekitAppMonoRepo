{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "Electron + React + LiveKit wrapper application",
  "author": "Softcial",
  "license": "ISC",
  "main": "dist/main.js",
  "scripts": {
  "build:renderer": "vite build ",
  "build:main":     "tsc -p tsconfig.main.json",
  "postbuild":      "cpy \"src/assets/*.*\" dist/assets && rimraf src/dist",
  "build":          "npm run build:renderer && npm run postbuild && npm run build:main",
  "start":          "npm run build && electron ."
  },
  "dependencies": {
    "@azure/msal-browser": "^4.13.2",
    "@azure/msal-react": "^3.0.13",
    "@heroicons/react": "^2.2.0",
    "axios": "^1.10.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.10",
    "@types/node": "^24.0.3",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cpy-cli": "^5.0.0",
    "cross-env": "^7.0.3",
    "electron": "^28.3.3",
    "electron-builder": "^26.0.12",
    "express": "^5.1.0",
    "postcss": "^8.5.6",
    "rimraf": "^3.0.2",
    "rollup-plugin-copy": "^3.5.0",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-static-copy": "^3.1.0",
    "vite-plugin-svgr": "^4.3.0",
    "wait-on": "^8.0.3"
  },
  "overrides": {
    "minimatch": "10.0.1"
  },
  "build": {
    "appId": "com.softcial.livekitwrapper",
    "productName": "LiveKitWrapper",
    "directories": {
      "output": "dist/electron"
    },
    "asar": true,
    "compression": "maximum",
    "npmRebuild": false,
    "files": [
      "dist/main.js",
      "dist/preload.js",
      "dist/renderer/**",
      "assets/**"
    ],
    "asarUnpack": [
      "**/*.node"
    ],
    "win": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "msi",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "msi": {
      "perMachine": true,
      "createDesktopShortcut": true,
      "shortcutName": "LiveKitWrapper"
    }
  },
  "keywords": [
    "electron",
    "react",
    "livekit",
    "wrapper"
  ]
}
