{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@config/*":     ["config/*"],
      "@middleware/*": ["middleware/*"],
      "@services/*":   ["services/*"],
      "@utils/*":      ["utils/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
